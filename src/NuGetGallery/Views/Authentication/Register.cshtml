@model RegisterRequest
@{
    ViewBag.Title = "Register";
}

<h1>New Account</h1>

<p class="long note">Achieve fame and glory by submitting your own packages.<br />
    <a href="@Url.LogOn(returnUrl: (string)ViewData[Constants.ReturnUrlViewDataKey])">Already have an account? Sign In.</a></p>

@using (Html.BeginForm())
{
    <fieldset class="form">
        <legend>Register Form</legend>

        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <div class="form-field">
            @Html.LabelFor(m => m.Username)
            @Html.EditorFor(m => m.Username)
            @Html.ValidationMessageFor(m => m.Username)
        </div>

        <div class="form-field">
            @Html.LabelFor(m => m.Password)
            @Html.EditorFor(m => m.Password)
            @Html.ValidationMessageFor(m => m.Password)
        </div>

        <div class="form-field">
            @Html.LabelFor(m => m.EmailAddress)
            @Html.EditorFor(m => m.EmailAddress)
            @Html.ValidationMessageFor(m => m.EmailAddress)
        </div>

        <img src="@Url.Content("~/content/images/required.png")" alt="Blue border on left means required." />

        <input type="submit" value="Register" title="Register" />

        <p id="form-field-register-policies">
            By clicking Register you agree that you have read and accept our 
                @Html.ActionLink("Terms of Use", "Terms", MVC.Pages.Name)
            and @Html.ActionLink("Privacy Policy", "Privacy", MVC.Pages.Name)
        </p>
    </fieldset>
}